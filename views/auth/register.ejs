<!DOCTYPE html>
<html lang="en">
  <!-- ✅ Include the reusable head partial -->
  <%- include('../partials/head', { title: 'Register - Demo App' }) %>

  <body class="bg-gray-100 min-h-screen text-gray-800 font-[Inter]">
    <!-- ✅ Include shared navbar -->
    <%- include('../partials/navbar') %>

    <!-- Register Container -->
    <div class="flex justify-center items-center py-16 px-4">
      <div class="bg-white shadow-2xl rounded-2xl p-8 w-full max-w-md transition transform hover:scale-[1.01]">
        <h2 class="text-3xl font-bold text-center text-indigo-600 mb-6">
          Create an Account
        </h2>

        <!-- Register Form -->
        <form action="/auth/register" method="POST" class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
              Full Name
            </label>
            <input
              id="name"
              type="text"
              name="name"
              required
              placeholder="Enter your full name"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
              Email
            </label>
            <input
              id="email"
              type="email"
              name="email"
              required
              placeholder="Enter your email"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
              Password
            </label>
            <input
              id="password"
              type="password"
              name="password"
              required
              placeholder="Enter your password"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>

          <button
            type="submit"
            class="w-full bg-indigo-600 text-white py-2 rounded-lg font-medium hover:bg-indigo-700 transition"
          >
            Register
          </button>
        </form>

        <!-- Extra Links -->
        <p class="text-center text-sm text-gray-600 mt-6">
          Already have an account?
          <a href="/auth/login" class="text-indigo-600 font-medium hover:underline">
            Login here
          </a>
        </p>

        <!-- Back to Home -->
        <p class="text-center text-sm text-gray-500 mt-4">
          <a href="/" class="hover:underline text-gray-700">← Back to Home</a>
        </p>
      </div>
    </div>
  </body>
</html>
