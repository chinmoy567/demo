<!DOCTYPE html>
<html lang="en">
  <!-- ‚úÖ Include shared head partial -->
  <%- include('partials/head', { title: title || 'Message - Demo App' }) %>

  <body
    class="bg-gradient-to-br from-indigo-100 via-blue-100 to-purple-100 min-h-screen flex flex-col"
  >
    <!-- ‚úÖ Include shared navbar -->
    <%- include('partials/navbar') %>

    <!-- Message Container -->
    <div class="flex-grow flex justify-center items-center px-4">
      <div
        class="bg-white shadow-2xl rounded-2xl p-10 w-full max-w-md text-center border border-gray-200 transition transform hover:scale-[1.01]"
      >
        <!-- Title -->
        <h1 class="text-3xl font-bold text-indigo-600 mb-4">
          <%= title %>
        </h1>

        <!-- Message -->
        <p class="text-gray-700 mb-8 leading-relaxed"><%= message %></p>

        <!-- Buttons -->
        <div class="flex justify-center space-x-4">
          <% if (backLink) { %>
            <a
              href="<%= backLink %>"
              class="bg-indigo-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-indigo-700 transition"
            >
              ‚Üê Go Back
            </a>
          <% } %>
          <a
            href="/"
            class="bg-gray-300 text-gray-800 px-6 py-2 rounded-lg font-medium hover:bg-gray-400 transition"
          >
            üè† Home
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
